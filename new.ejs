      <div class="form-group">
        <label for="from">From:</label>
        <input 
          type="text" 
          id="from" 
          name="from" 
          required 
          placeholder="Enter sender name"
          autocomplete="off">
      </div>

      <div class="form-group">
        <label for="to">To:</label>
        <input 
          type="text" 
          id="to" 
          name="to" 
          required 
          placeholder="Enter receiver name"
          autocomplete="off">
      </div>

      <div class="form-group">
        <label for="message">Message:</label>
        <textarea 
          id="message" 
          name="message" 
          required 
          placeholder="Type your message here..."
          rows="5"></textarea>
      </div>

